@model IEnumerable<prjShoppingCar.Models.tProduct>
@{
    ViewBag.Title = "Index";
}
<div class="row" style="margin-top:20px;">
    @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="~/images/@item.fImg"
                             style="width:200px;height:270px;" />
                        <div class="caption">
                            <h4>@item.fName</h4>
                            <p>單價：@item.fPrice</p>
                            <p><a href="@Url.Action("AddCar","Member")?fPId=@item.fPId" class="btn btn-primary">加入購物車</a></p>
                        </div>
                    </div>
                </div>
            }
</div>

